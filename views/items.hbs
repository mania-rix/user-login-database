
<!-- Add Category Button -->
<h2>Items</h2>
<a href="/items/add" class="btn btn-success pull-right">Add Item</a>
{{#if items}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Category</th>
                <th>Price</th>
                <th>Published</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each items}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.postDate}}</td>
                    <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
                    <td>${{this.price}}</td>
                    <td>{{this.published}}</td>
                    <td>
                        <a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No items available.</p>
{{/if}}
